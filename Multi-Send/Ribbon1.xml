<?xml version="1.0" encoding="UTF-8"?>
<customUI xmlns="http://schemas.microsoft.com/office/2009/07/customui" onLoad="Ribbon_Load">
	<ribbon>
		<tabs>
			<!-- Inspector: compose/edit message (includes double-clicked Drafts) -->
			<tab idMso="TabMessage">
				<group id="EmailDuplicatorComposeGroup"
					   label="Multi-Send"
					   insertAfterMso="GroupActions">
					<button id="EmailDuplicatorComposeButton"
							label="Multi-Send"
							screentip="Multi-Send Email Duplicator"
							supertip="Access the Multi-Send tool to duplicate and personalize emails"
							size="large"
							imageMso="MailMergeStartLetters"
							onAction="EmailDuplicator_Click" />
				</group>
			</tab>
			<!-- Inspector: brand new message compose -->
			<tab idMso="TabNewMailMessage">
				<group id="EmailDuplicatorNewGroup"
					   label="Multi-Send"
					   insertAfterMso="GroupActions">
					<button id="EmailDuplicatorNewButton"
							label="Multi-Send"
							screentip="Multi-Send Email Duplicator"
							supertip="Access the Multi-Send tool to duplicate and personalize emails"
							size="large"
							imageMso="MailMergeStartLetters"
							onAction="EmailDuplicator_Click" />
				</group>
			</tab>
		</tabs>
	</ribbon>
</customUI>